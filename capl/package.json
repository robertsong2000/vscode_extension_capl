{
  "name": "capl",
  "displayName": "capl",
  "description": "capl syntax",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/robertsong2000/vscode-capl-extension.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "capl",
        "aliases": ["CAPL", "capl"],
        "extensions": [".capl", ".can", ".cin"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "capl",
        "scopeName": "source.capl",
        "path": "./syntaxes/capl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "capl.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
